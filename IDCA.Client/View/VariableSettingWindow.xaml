                <RowDefinition Height="165"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="175"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="165"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <TextBlock FontSize="15">变量名</TextBlock>
                <TextBox Width="50" 
                         Height="25"
                         Style="{StaticResource IDCA.Font.Base}"
                         VerticalContentAlignment="Center"
                         Text="{Binding Name}"/>
                <TextBlock FontSize="15">变量类型</TextBlock>
                <ComboBox ItemsSource="{Binding FieldTypes}"
                          SelectedIndex="{Binding FieldTypeSelectedIndex}"
                          SelectedItem="{Binding FieldTypeSelectedItem}"/>
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" FontSize="15">属性配置</TextBlock>
                <Button Grid.Column="1" 
                        HorizontalAlignment="Right"
                        Style="{StaticResource IDCA.Button.Add}"
                        Command="{Binding NewPropertyCommand}"/>
            </Grid>

            <DataGrid Grid.Row="2"
                      ItemsSource="{Binding Properties}"
                      d:ItemsSource="{d:SampleData ItemCount=5}"
                      Style="{StaticResource IDCA.DataGrid.Base}">
