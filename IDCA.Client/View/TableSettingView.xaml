<UserControl x:Class="IDCA.Client.View.TableSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iconPack="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             xmlns:viewmodel="clr-namespace:IDCA.Client.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:TableSettingViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="550" 
             d:DesignWidth="780">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="20 0 0 0">

            <StackPanel.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button}">
                    <Setter Property="Width" Value="80"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="FontSize" Value="13"/>
                </Style>
                <Style TargetType="TextBlock" BasedOn="{StaticResource MahApps.Styles.TextBlock}">
                    <Setter Property="FontFamily" Value="{StaticResource IDCA.Font.Family}"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Margin" Value="5"/>
                </Style>
                <Style TargetType="TextBox" BasedOn="{StaticResource MahApps.Styles.TextBox}">
                    <Setter Property="Width" Value="120"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="FontFamily" Value="{StaticResource IDCA.Font.Family}"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </StackPanel.Resources>

            <TextBlock>文件名称</TextBlock>
            <TextBox Text="{Binding TableName}" />

            <!--<TextBlock>出示表头</TextBlock>
            <mah:SplitButton Width="100"
                             Height="30"
                             Margin="5"
                             Text="出示表头"
                             ItemsSource="{Binding Headers}">
                <mah:SplitButton.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Width="{Binding RelativeSource={RelativeSource AncestorType=ComboBoxItem, Mode=FindAncestor}, Path=Width}"
                                  Height="{Binding RelativeSource={RelativeSource AncestorType=ComboBoxItem, Mode=FindAncestor}, Path=Height}"
                                  IsChecked="{Binding Checked}"
                                  Content="{Binding Name}"/>
                    </DataTemplate>
                </mah:SplitButton.ItemTemplate>
            </mah:SplitButton>-->
            
            <TextBlock>出示表头</TextBlock>
            <ComboBox Width="150" 
                      Height="30" 
                      Margin="5"
                      IsEditable="True"
                      Text="{Binding CheckedHeaders}"
                      ItemsSource="{Binding Headers}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Width="{Binding RelativeSource={RelativeSource AncestorType=ComboBox, Mode=FindAncestor}, Path=Width}"
                                  Height="{Binding RelativeSource={RelativeSource AncestorType=ComboBoxItem, Mode=FindAncestor}, Path=Height}"
                                  IsChecked="{Binding Checked}"
                                  Content="{Binding Name}"
                                  Margin="0"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <Button Command="{Binding PushNewElementCommand}">添加表格</Button>
            
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding ElementList}" 
                          d:ItemsSource="{d:SampleData ItemCount=5}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Height="180" 
                                BorderThickness="0 0 0 1"
                                BorderBrush="{StaticResource IDCA.Brushes.Window.BorderBrush}">
                            <Grid>

                                <Grid.Resources>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource MahApps.Styles.TextBox}">
                                        <Setter Property="Width" Value="120"/>
                                        <Setter Property="Height" Value="30"/>
                                        <Setter Property="Margin" Value="5"/>
                                        <Setter Property="FontFamily" Value="{StaticResource IDCA.Font.Family}"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    </Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button}">
                                        <Setter Property="Width" Value="80"/>
                                        <Setter Property="Height" Value="30"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Margin" Value="5"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource MahApps.Styles.TextBlock}">
                                        <Setter Property="FontFamily" Value="{StaticResource IDCA.Font.Family}"/>
                                        <Setter Property="FontSize" Value="15"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="5"/>
                                    </Style>
                                    <Style TargetType="GridSplitter">
                                        <Setter Property="Height" Value="30"/>
                                        <Setter Property="Width" Value="1"/>
                                        <Setter Property="Background" Value="LightGray"/>
                                    </Style>
                                    <Style TargetType="ComboBox" BasedOn="{StaticResource MahApps.Styles.ComboBox}">
                                        <Setter Property="Width" Value="100"/>
                                        <Setter Property="Height" Value="30"/>
                                        <Setter Property="Margin" Value="5"/>
                                    </Style>
                                </Grid.Resources>
                                
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="10"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="1" Grid.Column="1">描述配置</TextBlock>
                                <TextBlock Grid.Row="2" Grid.Column="1">表格配置</TextBlock>
                                <TextBlock Grid.Row="3" Grid.Column="1">轴配置</TextBlock>
                                <TextBlock Grid.Row="4" Grid.Column="1">筛选器配置</TextBlock>

                                <StackPanel Grid.Row="1" 
                                            Grid.Column="2" 
                                            Orientation="Horizontal">

                                    <GridSplitter/>

                                    <TextBlock>标题</TextBlock>
                                    <TextBox Text="{Binding Title}"/>

                                    <GridSplitter/>

                                    <TextBlock>基数标签</TextBlock>
                                    <TextBox Text="{Binding BaseText}"/>
                                    
                                    <GridSplitter/>

                                    <TextBlock>追加标签</TextBlock>
                                    <TextBox Text="{Binding TableAppendLabel}"/>

                                </StackPanel>

                                <StackPanel Grid.Row="2" 
                                            Grid.Column="2" 
                                            Orientation="Horizontal">
                                    <GridSplitter/>

                                    <TextBlock>变量名</TextBlock>
                                    <TextBox Text="{Binding VariableName}"/>

                                    <GridSplitter/>

                                    <TextBlock>表格类型</TextBlock>
                                    <ComboBox ItemsSource="{Binding TableTypeSelections}" SelectedIndex="{Binding TableTypeSelectedIndex}"/>

                                    <GridSplitter/>

                                </StackPanel>
                                
                                <StackPanel Grid.Row="3" 
                                            Grid.Column="2" 
                                            Orientation="Horizontal">

                                    
                                    
                                    <GridSplitter/>

                                    <TextBlock>Top/Bottom/NPS</TextBlock>
                                    <ComboBox IsEditable="True"
                                              Text="{Binding TableTopBottomBoxName}"
                                              ItemsSource="{Binding TableTopBottomBoxSelections}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding Checked}"
                                                          Content="{Binding Name}"
                                                          Margin="0"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                    <GridSplitter/>

                                    <TextBlock>Net类型</TextBlock>
                                    <ComboBox SelectedIndex="{Binding TableNetTypeSelectedIndex}"
                                              ItemsSource="{Binding TableNetTypeSelections}"/>

                                    <GridSplitter/>

                                    <Button Width="120" 
                                            Command="{Binding AxisSettingCommand}">配置轴表达式</Button>
                                    
                                    <GridSplitter/>

                                </StackPanel>

                                <StackPanel Grid.Row="4" 
                                            Grid.Column="2" 
                                            Orientation="Horizontal">

                                    <GridSplitter/>

                                    <TextBlock>基数筛选器</TextBlock>
                                    <TextBox Text="{Binding BaseFilter}"/>

                                    <GridSplitter/>

                                    <TextBlock>表格筛选器</TextBlock>
                                    <TextBox Text="{Binding TableFilter}"/>

                                    <GridSplitter/>

                                </StackPanel>

                                <Button Grid.Row="1"
                                        Grid.RowSpan="4"
                                        Grid.Column="11"
                                        Width="25"
                                        Height="25"
                                        Command="{Binding RemoveCommand}"
                                        Background="#00000000"
                                        Foreground="Red"
                                        HorizontalAlignment="Left"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid Background="{TemplateBinding Background}">
                                                <iconPack:PackIconMaterialDesign Kind="Close"
                                                                                 Height="25"
                                                                                 Width="25"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
    </Grid>
    
</UserControl>
