<UserControl x:Class="IDCA.Client.View.TableSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iconPack="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             xmlns:viewmodel="clr-namespace:IDCA.Client.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:TableSettingViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="550" 
             d:DesignWidth="950">

    <Grid>

        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontFamily" Value="{StaticResource IDCA.Font.Family}"/>
                <Setter Property="Background" Value="{StaticResource IDCA.Brushes.Button.Background}"/>
            </Style>
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="20 0 0 0">

            <StackPanel.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontFamily" Value="{StaticResource IDCA.Font.Family}"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Margin" Value="5"/>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Width" Value="120"/>
                    <Setter Property="Height" Value="25"/>
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="FontFamily" Value="{StaticResource IDCA.Font.Family}"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </StackPanel.Resources>

            <TextBlock>文件名称</TextBlock>
            <TextBox Text="{Binding TableName}" />
            
            <TextBlock>出示表头</TextBlock>
            <ComboBox Width="150" 
                      Height="25" 
                      Margin="5"
                      IsEditable="True"
                      IsReadOnly="True"
                      FontSize="13"
                      FontFamily="{StaticResource IDCA.Font.Family}"
                      Text="{Binding CheckedHeaders}"
                      ItemsSource="{Binding Headers}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox IsChecked="{Binding Checked}"
                                  Content="{Binding Name}"
                                  Margin="0"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <Button Command="{Binding PushNewElementCommand}">添加表格</Button>
            
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding ElementList}" 
                          d:ItemsSource="{d:SampleData ItemCount=5}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Height="195" 
                                BorderThickness="0 0 0 1"
                                BorderBrush="{StaticResource IDCA.Brushes.Window.BorderBrush}">
                            <Grid>

                                <Grid.Resources>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Width" Value="120"/>
                                        <Setter Property="Height" Value="25"/>
                                        <Setter Property="Margin" Value="5"/>
                                        <Setter Property="FontFamily" Value="{StaticResource IDCA.Font.Family}"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    </Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Width" Value="120"/>
                                        <Setter Property="Height" Value="25"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="FontFamily" Value="{StaticResource IDCA.Font.Family}"/>
                                        <Setter Property="Margin" Value="5"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Background" Value="{StaticResource IDCA.Brushes.Button.Background}"/>
                                    </Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="{StaticResource IDCA.Font.Family}"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="5"/>
                                    </Style>
                                    <Style TargetType="GridSplitter">
                                        <Setter Property="Height" Value="30"/>
                                        <Setter Property="Width" Value="1"/>
                                        <Setter Property="Background" Value="LightGray"/>
                                    </Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Width" Value="100"/>
                                        <Setter Property="Height" Value="25"/>
                                        <Setter Property="Margin" Value="5"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="FontFamily" Value="{StaticResource IDCA.Font.Family}"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    </Style>
                                    <Style TargetType="RadioButton">
                                        <Setter Property="Margin" Value="5"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="FontFamily" Value="{StaticResource IDCA.Font.Family}"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="Margin" Value="5"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="FontFamily" Value="{StaticResource IDCA.Font.Family}"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                </Grid.Resources>
                                
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="10"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="1" Grid.Column="1">描述配置</TextBlock>
                                <TextBlock Grid.Row="2" Grid.Column="1">表格配置</TextBlock>
                                <TextBlock Grid.Row="3" Grid.Column="1" Grid.RowSpan="2">轴配置</TextBlock>
                                <TextBlock Grid.Row="5" Grid.Column="1">筛选器配置</TextBlock>

                                <Button Grid.Row="1" 
                                        Grid.Column="0"
                                        Width="30"
                                        Height="30"
                                        Cursor="Hand"
                                        Command="{Binding MoveUpCommand}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid Width="30"
                                                  Height="30"
                                                  Background="#00000000">
                                                <iconPack:PackIconMaterialDesign Kind="ArrowDropUp"
                                                                                 Width="20"
                                                                                 Height="20"
                                                                                 HorizontalAlignment="Center"
                                                                                 VerticalAlignment="Center"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                
                                <Button Grid.Row="5" 
                                        Grid.Column="0"
                                        Width="30"
                                        Height="30"
                                        Background="#00000000"
                                        Cursor="Hand"
                                        Command="{Binding MoveDownCommand}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid Width="30"
                                                  Height="30"
                                                  Background="#00000000">
                                                <iconPack:PackIconMaterialDesign Kind="ArrowDropDown"
                                                                                 Width="20"
                                                                                 Height="20"
                                                                                 HorizontalAlignment="Center"
                                                                                 VerticalAlignment="Center"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <StackPanel Grid.Row="1" 
                                            Grid.Column="2" 
                                            Orientation="Horizontal">

                                    <GridSplitter/>

                                    <TextBlock>标题</TextBlock>
                                    <TextBox Text="{Binding Title}"/>

                                    <GridSplitter/>

                                    <TextBlock>基数标签</TextBlock>
                                    <TextBox Text="{Binding BaseText}"/>
                                    
                                    <GridSplitter/>

                                    <TextBlock>追加标签</TextBlock>
                                    <TextBox Text="{Binding TableAppendLabel}"/>

                                </StackPanel>

                                <StackPanel Grid.Row="2" 
                                            Grid.Column="2" 
                                            Orientation="Horizontal">
                                    <GridSplitter/>

                                    <TextBlock>变量名</TextBlock>
                                    <TextBox Text="{Binding VariableName}"/>

                                    <GridSplitter/>

                                    <TextBlock>表格类型</TextBlock>
                                    <ComboBox ItemsSource="{Binding TableTypeSelections}" SelectedIndex="{Binding TableTypeSelectedIndex}"/>

                                    <GridSplitter/>

                                    <CheckBox Margin="5"
                                              IsChecked="{Binding AddNewVariable}"
                                              >添加新变量</CheckBox>
                                    
                                    <GridSplitter/>

                                    <Button Width="100" 
                                            IsEnabled="{Binding AddNewVariable}"
                                            Command="{Binding NewVariableSettingCommand}"
                                            >配置新变量</Button>

                                </StackPanel>
                                
                                <StackPanel Grid.Row="3" 
                                            Grid.Column="2" 
                                            Orientation="Horizontal">

                                    <GridSplitter/>

                                    <TextBlock>Net类型</TextBlock>
                                    <ComboBox SelectedIndex="{Binding NetTypeSelectedIndex}"
                                              ItemsSource="{Binding NetTypeSelections}"/>

                                    <GridSplitter/>

                                    <RadioButton GroupName="{Binding Table.Name}"
                                                 IsChecked="{Binding DonotAppendMeanOrAverage}"
                                                 >不添加均值</RadioButton>

                                    <RadioButton GroupName="{Binding Table.Name}"
                                                 IsChecked="{Binding AppendMean}"
                                                 >添加平均值</RadioButton>

                                    <RadioButton GroupName="{Binding Table.Name}"
                                                 IsChecked="{Binding AppendAverage}"
                                                 >添加平均提及</RadioButton>

                                    <GridSplitter/>

                                    <TextBlock>均值变量</TextBlock>
                                    <TextBox Text="{Binding MeanVariable}"/>

                                </StackPanel>

                                <StackPanel Grid.Row="4"
                                            Grid.Column="2"
                                            Orientation="Horizontal">

                                    <GridSplitter/>

                                    <TextBlock>Box/NPS</TextBlock>
                                    <ComboBox IsEditable="True"
                                              Text="{Binding TopBottomBoxName}"
                                              ItemsSource="{Binding TopBottomBoxSelections}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding Checked}"
                                                          Content="{Binding Name}"
                                                          Margin="0"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                    <GridSplitter/>

                                    <TextBlock>选项顺序</TextBlock>
                                    <ComboBox Width="60" 
                                              ItemsSource="{Binding FactorSequence}"
                                              SelectedIndex="{Binding FactorSequenceSelectedIndex}"/>

                                    <GridSplitter/>

                                    <TextBlock>NPS Top Box</TextBlock>
                                    <TextBox Width="30" 
                                             HorizontalContentAlignment="Center"
                                             Text="{Binding NpsTopBox}"/>

                                    <GridSplitter/>

                                    <TextBlock>NPS Bottom Box</TextBlock>
                                    <TextBox Width="30" 
                                             HorizontalContentAlignment="Center"
                                             Text="{Binding NpsBottomBox}"/>

                                    <GridSplitter/>

                                    <Button Width="90" 
                                            Command="{Binding AxisSettingCommand}">配置轴表达式</Button>

                                </StackPanel>
                                
                                <StackPanel Grid.Row="5" 
                                            Grid.Column="2" 
                                            Orientation="Horizontal">

                                    <GridSplitter/>

                                    <TextBlock>基数筛选器</TextBlock>
                                    <TextBox Text="{Binding BaseFilter}"/>

                                    <GridSplitter/>

                                    <TextBlock>表格筛选器</TextBlock>
                                    <TextBox Text="{Binding TableFilter}"/>

                                    <GridSplitter/>

                                </StackPanel>

                                <Button Grid.Row="1"
                                        Grid.RowSpan="5"
                                        Grid.Column="11"
                                        Width="20"
                                        Height="20"
                                        Command="{Binding RemoveCommand}"
                                        Background="#00000000"
                                        HorizontalAlignment="Center"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid Background="{TemplateBinding Background}">
                                                <iconPack:PackIconMaterialDesign Kind="Close"
                                                                                 Height="15"
                                                                                 Width="15"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
    </Grid>
    
</UserControl>
