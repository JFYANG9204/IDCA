<Window x:Class="IDCA.Client.View.AxisSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:IDCA.Client.ViewModel" 
        d:DataContext="{d:DesignInstance Type=viewmodel:AxisSettingViewModel}"
        mc:Ignorable="d"
        Height="600" 
        Width="840"
        Style="{StaticResource IDCA.Window.Normal}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="544.76"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1"
              Grid.Column="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="320"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="轴表达式配置"
                           FontSize="25"
                           FontFamily="{StaticResource IDCA.Font.Family}"
                           VerticalAlignment="Top"/>

                <Grid Grid.Row="1">
                    
                    <Grid.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#FFEFEFEF"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFDADADA"/>
                                    <Setter Property="Foreground" Value="DarkGray"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Resources>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Margin="10 0 0 0"
                               Text="可用轴元素"
                               VerticalAlignment="Bottom"
                               FontFamily="{StaticResource IDCA.Font.Family}"
                               FontSize="18"/>

                    <ListBox Grid.Row="1"
                             Grid.Column="0"
                             Margin="10 5"
                             FontSize="15"
                             ItemsSource="{Binding AxisAvalibleElements}"
                             SelectedIndex="{Binding AxisAvalibleElementsSelectIndex}"
                             d:ItemsSource="{d:SampleData ItemCount=5}"/>

                    <TextBlock Grid.Row="0"
                               Grid.Column="2"
                               Margin="10 0 0 0"
                               Text="现有轴元素"
                               VerticalAlignment="Bottom"
                               FontFamily="{StaticResource IDCA.Font.Family}"
                               FontSize="18"/>

                    <ListBox Grid.Row="1"
                             Grid.Column="2"
                             Margin="10 5"
                             FontSize="15"
                             ItemsSource="{Binding AxisCurrentElements}"
                             SelectedIndex="{Binding AxisCurrentElementsSelectIndex}"
                             d:ItemsSource="{d:SampleData ItemCount=5}"/>

                    <Grid Grid.Row="1"
                          Grid.Column="1">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Button Grid.Row="1"
                                Background="White"
                                Command="{Binding AddElementCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Canvas Background="{TemplateBinding Background}">
                                        <Path Stroke="DarkGray"
                                              StrokeThickness="1"
                                              Fill="{TemplateBinding Foreground}"
                                              Data="M45,25 25,5 25,18 5,18 5,32 25,32 25,45z"/>
                                    </Canvas>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Row="2"
                                Background="White"
                                Command="{Binding RemoveElementCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Canvas Background="{TemplateBinding Background}">
                                        <Path Stroke="DarkGray"
                                              StrokeThickness="1"
                                              Fill="{TemplateBinding Foreground}"
                                              Data="M5,25 25,5 25,18 45,18 45,32 25,32 25,45z"/>
                                    </Canvas>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>

                    <Grid Grid.Column="3" Grid.Row="1">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Button Grid.Row="1"
                                Command="{Binding MoveUpCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Canvas Background="{TemplateBinding Background}">
                                        <Path Stroke="DarkGray"
                                              StrokeThickness="1"
                                              Fill="{TemplateBinding Foreground}"
                                              Data="M25,5 5,25 18,25 18,45 32,45 32,25 45,25z"/>
                                    </Canvas>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Row="2"
                                Background="White"
                                Command="{Binding MoveDownCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Canvas Background="{TemplateBinding Background}">
                                        <Path Stroke="DarkGray"
                                              StrokeThickness="1"
                                              Fill="{TemplateBinding Foreground}"
                                              Data="M25,45 5,25 18,25 18,5 32,5 32,25 45,25z"/>
                                    </Canvas>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>
                    
                </Grid>

                <TextBlock Grid.Row="2"
                           Margin="10 0 0 0"
                           Text="轴表达式"
                           VerticalAlignment="Bottom"
                           FontFamily="{StaticResource IDCA.Font.Family}"
                           FontSize="18"/>
                <TextBox Grid.Row="3"
                         Margin="10 5"
                         FontFamily="{StaticResource IDCA.Font.Family}"
                         FontSize="14"
                         Text="{Binding AxisExpression}"/>

            </Grid>

            <Grid Grid.Column="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="1"
                           Margin="10 0 0 0"
                           Text="详细配置"
                           VerticalAlignment="Bottom"
                           FontFamily="{StaticResource IDCA.Font.Family}"
                           FontSize="18"/>

                <ListBox Grid.Row="2"
                         Margin="10 5" 
                         ItemsSource="{Binding CurrentAxisElementDetailSetting}"
                         d:ItemsSource="{d:SampleData ItemCount=5}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Height="25">
                                <TextBlock Width="120"
                                           FontSize="15"
                                           VerticalAlignment="Center"
                                           Text="{Binding Label}"/>
                                <TextBox Width="100"
                                         Height="25"
                                         FontSize="15"
                                         VerticalContentAlignment="Center"
                                         Text="{Binding Value}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock Grid.Row="3"
                           Margin="10 0 0 0"
                           Text="后缀配置"
                           VerticalAlignment="Bottom"
                           FontFamily="{StaticResource IDCA.Font.Family}"
                           FontSize="18"/>

                <ListBox Grid.Row="4"
                         Margin="10 5" 
                         ItemsSource="{Binding CurrentAxisTailingElementSetting}"
                         d:ItemsSource="{d:SampleData ItemCount=5}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Height="25" Orientation="Horizontal">
                                <CheckBox Margin="0 5" 
                                          VerticalAlignment="Center"
                                          IsChecked="{Binding IsChecked}"/>
                                <TextBlock Margin="5 0"
                                           Width="150"
                                           FontSize="15"
                                           VerticalAlignment="Center"
                                           Text="{Binding TailingElementLabel}"/>
                                <Canvas Width="70">
                                    <ComboBox Width="70"
                                              Height="25"
                                              Visibility="{Binding ComboBoxVisibility}"
                                              SelectedIndex="{Binding TailingElementValueSelectedIndex}"
                                              ItemsSource="{Binding TailingElementValue}"/>
                                    <TextBox Width="70"
                                             Height="25"
                                             FontSize="15"
                                             Visibility="{Binding TextBoxVisiblity}"
                                             Text="{Binding TextValue}"
                                             VerticalContentAlignment="Center"/>
                                </Canvas>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Grid.Row="5"
                        Width="90"
                        Height="30"
                        Margin="200 0 10 0"
                        VerticalAlignment="Bottom">取消</Button>

                <Button Grid.Row="5"
                        Width="90"
                        Height="30"
                        Margin="100 0 110 0"
                        VerticalAlignment="Bottom">确定</Button>

            </Grid>

        </Grid>
        
    </Grid>
</Window>
